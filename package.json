{
  "name": "app",
  "private": "true",
  "dependencies": {
    "chart.js": "^4.4.0",
    "esbuild": "^0.23.1",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.2.0",
    "react-dom": "^18.2.0"
  },
  "scripts": {
    "build": "esbuild app/javascript/*.* --bundle --sourcemap --format=esm --outdir=app/assets/builds --public-path=/assets/ --loader:.js=jsx --loader:.jsx=jsx",
